{
    "name": "Crunchyroll iFrame Player",
    "version": "1.2.0",
    "description": "Permite ver todos os v√≠deos do crunchyroll gratuitamente.",
    "author": "itallolegal",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_title": "Crunchyroll iFrame Player",
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
	"browser_specific_settings": {
        "gecko": {
			"id": "test@test.com"
		}
    },
    "permissions": ["webRequest", "webRequestBlocking", "storage", "*://pl.crunchyroll.com/*", "*://localhost/*", "*://www.crunchyroll.com/*", "*://rgern100.github.io/*", "*://*.vrv.co/*"],
    "content_scripts": [{
            "matches": ["https://*.crunchyroll.com/*"],
            "css": ["content.css"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "manifest_version": 2
}
